# VMware ESXi Connection
VCENTER_HOSTNAME=your_vcenter_host
VCENTER_PORT=your_vcenter_port
VCENTER_USERNAME=your_vcenter_username
VCENTER_PASSWORD=your_vcenter_password
VCENTER_VALIDATE_CERTS=false

# VMware Infrastructure
VMWARE_DATACENTER=your_datacenter
VMWARE_DATASTORE=your_datastore
VMWARE_FOLDER=/your_datacenter/vm

# ISO Paths
ISO_PATH=[your_datastore] your-ubuntu.iso
PFSENSE_ISO_PATH=[your_datastore] your-pfsense.iso

# Network Configuration
NETWORK_VLAN10=your_vlan10_network
NETWORK_VLAN20=your_vlan20_network
NETWORK_VLAN30=your_vlan30_network
NETWORK_TRUNK=your_trunk_network
NETWORK_GENERAL=your_general_network
NETWORK_MANAGEMENT=your_management_network

# Network Settings
NETMASK=255.255.255.0

# VLAN Gateways
GATEWAY_VLAN10=192.168.10.1
GATEWAY_VLAN20=192.168.20.1
GATEWAY_VLAN30=192.168.30.1
GATEWAY_TRUNK=192.168.40.1
GATEWAY_DMZ=192.168.99.1